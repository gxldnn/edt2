import xml.etree.ElementTree as ET

tree = ET.parse('/home/gxldnn/Documents/edt2/Llenguatje de Marques/AC2.1/llibres.xml')
root = tree.getroot()

for contacte in root.findall('contacte'):
    print("ID:", contacte.get('id'))
    print("Destacat:", contacte.get('destacat'))
    print("Nom:", contacte.find('nom').text)
    print("Edat:", contacte.find('edat').text)
    for telefon in contacte.findall('telefon'):
        print("Tel√®fon ({}): {}".format(telefon.get('tipus'), telefon.text))
    email = contacte.find('email')
    if email is not None:
        print("Email:", email.text)
    print("---")
