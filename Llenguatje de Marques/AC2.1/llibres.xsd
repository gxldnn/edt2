<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">
  <xs:element name="agenda">
    <xs:complexType>
      <xs:sequence>
        <xs:element name="contacte" minOccurs="1" maxOccurs="unbounded">
         <xs:complexType>
          <xs:sequence>
            <xs:element name="nom" type="xs:string"></xs:element>
            <xs:element name="edat" type="edatrang"></xs:element>
            <xs:element name="telefon" minOccurs="1" maxOccurs="3">
              <xs:complexType>
                <xs:simpleContent>
                  <xs:extension base="xs:string">
                    <xs:attribute name="tipus" type="telefonrang" use="prohibited"></xs:attribute>
                  </xs:extension>
                </xs:simpleContent>
              </xs:complexType>
            </xs:element>
          </xs:sequence>
          <xs:attribute name="id" type="xs:ID" ></xs:attribute>
          <xs:attribute name="destacat" type="xs:boolean"></xs:attribute>
         </xs:complexType> 
        </xs:element>
      </xs:sequence>
    </xs:complexType>
  </xs:element>

  <xs:simpleType name="edatrang">
    <xs:restriction base="xs:integer">
      <xs:minInclusive value="0"></xs:minInclusive>
      <xs:maxInclusive value="120"></xs:maxInclusive>   
    </xs:restriction>
  </xs:simpleType>  
  <xs:simpleType name="telefonrang">
    <xs:restriction base="xs:integer">
      <xs:minInclusive value="0"></xs:minInclusive>
      <xs:maxInclusive value="120"></xs:maxInclusive>   
    </xs:restriction>
  </xs:simpleType>

</xs:schema>